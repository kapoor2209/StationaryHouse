@model IEnumerable<StationaryHouse.Models.SubCategory>

@{
    ViewData["Title"] = "Index";
}

<h1 class="heading text-center">All Sub Categories</h1>

<p>
    <a asp-action="Create">Add New Sub Category</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubCategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubCategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SubCategoryID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SubCategoryID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SubCategoryID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
