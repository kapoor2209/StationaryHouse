@model IEnumerable<StationaryHouse.Models.Category>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 heading">Welcome To Stationery House</h1>
</div>
<div class="row" style="margin-bottom:50px;">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-3">
            <div class="card w-100">
                <center>
                    <img src="~/images/category.png" alt="" style="width:100%">
                </center>
                <div class="card-body">
                    <h5 class="card-text">
                        @item.CategoryName
                    </h5>
                    <a class="btn btn-success btn-block" asp-action="ViewSubCategory" asp-route-id="@item.CategoryID">Sub Categories</a>
                </div>

            </div>
        </div>
    }
</div>